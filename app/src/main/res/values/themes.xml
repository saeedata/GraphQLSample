<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MarleySpoon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Tag chip style. -->
        <item name="tagChip">@style/Theme.MarleySpoon.TagChip</item>

    </style>

    <style name="Theme.MarleySpoon.TagChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:textColor">@color/primary_text_light</item>
    </style>

    <style name="Theme.MarleySpoon.ErrorLayout">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme.MarleySpoon.ErrorButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/primary_text_light</item>
        <item name="strokeColor">@color/primary_text_light</item>
    </style>

</resources>